{
    "lexicon": 1,
    "id": "dev.skywell.defs",
    "defs": {
        "profileView": {
            "type": "object",
            "required": [
                "did",
                "handle"
            ],
            "properties": {
                "did": {
                    "type": "string",
                    "format": "did"
                },
                "handle": {
                    "type": "string",
                    "format": "handle"
                },
                "displayName": {
                    "type": "string",
                    "maxGraphemes": 64,
                    "maxLength": 640
                },
                "avatar": {
                    "type": "string",
                    "format": "uri"
                },
                "fileCount": {
                    "type": "integer"
                }
            }
        },
        "fileView": {
            "type": "object",
            "required": [
                "uri",
                "cid",
                "blob",
                "createdAt",
                "name",
                "slug"
            ],
            "properties": {
                "uri": {
                    "type": "string",
                    "format": "at-uri"
                },
                "cid": {
                    "type": "string",
                    "format": "cid"
                },
                "blob": {
                    "type": "blob"
                },
                "createdAt": {
                    "type": "string",
                    "format": "datetime"
                },
                "name": {
                    "type": "string",
                    "minGraphemes": 1,
                    "maxGraphemes": 80
                },
                "description": {
                    "type": "string",
                    "minLength": 1,
                    "maxGraphemes": 500
                },
                "slug": {
                    "type": "string"
                }
            }
        }
    }
}

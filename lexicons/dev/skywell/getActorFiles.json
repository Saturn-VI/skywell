{
    "lexicon": 1,
    "id": "dev.skywell.getActorFiles",
    "defs": {
        "main": {
            "type": "query",
            "description": "Gets files created by an actor. Paginated.",
            "parameters": {
                "type": "params",
                "required": ["actor"],
                "properties": {
                    "actor": {
                        "type": "string",
                        "format": "at-identifier",
                        "description": "Handle or DID of account to get files from."
                    },
                    "limit": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 100,
                        "default": 50
                    },
                    "cursor": {
                        "type": "string"
                    }
                }
            },
            "output": {
                "encoding": "application/json",
                "schema": {
                    "type": "object",
                    "required": ["files", "actor"],
                    "properties": {
                        "cursor": {
                            "type": "string"
                        },
                        "files": {
                            "type": "array",
                            "items": {
                                "type": "ref",
                                "ref": "dev.skywell.defs#fileView"
                            }
                        },
                        "actor": {
                            "type": "ref",
                            "ref": "dev.skywell.defs#profileView"
                        }
                    }
                }
            }
        }
    }
}

{
    "lexicon": 1,
    "id": "dev.skywell.file",
    "defs": {
        "main": {
            "type": "record",
            "description": "Record declaring a 'file' with a description and name.",
            "key": "tid",
            "record": {
                "type": "object",
                "required": [
                    "blobRef",
                    "createdAt",
                    "name"
                ],
                "properties": {
                    "blobRef": {
                        "type": "blob"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "datetime"
                    },
                    "name": {
                        "type": "string",
                        "minGraphemes": 1,
                        "maxGraphemes": 80
                    },
                    "description": {
                        "type": "string",
                        "minLength": 1,
                        "maxGraphemes": 500
                    },
                    "slug": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
